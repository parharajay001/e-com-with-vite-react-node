{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "outDir": "dist",
    "rootDir": ".",
    "strict": true,
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "composite": true,
    "types": ["mocha", "chai"]
  },
  "include": ["src/**/*", "prisma/**/*", "tests/**/*"]
}
